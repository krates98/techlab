                <div class="col-sm-9">
                    <input class="form-control " type="text" value="<%= currentUser.shift %>" readonly>
                </div>
                </div>
            <div class="form-group row form1">
            <label class="col-sm-3 col-form-label">GooglePay:</label>
            <div class="col-sm-9">
                <input name="gpay" class="form-control " type="text" value="<%= currentUser.gpay %>" readonly>
            </div>
            </div>
            <div class="form-group row form1">
            <label class="col-sm-3 col-form-label">PhonePe:</label>
            <div class="col-sm-9">
                <input name="phonepe" class="form-control " type="text" value="<%= currentUser.phonepe %>" readonly>
            </div>
            </div>
            <div class="form-group row form1">
            <label class="col-sm-3 col-form-label">Paytm:</label>
            <div class="col-sm-9">
                <input name="paytm" class="form-control " type="text" value="<%= currentUser.paytm %>" readonly>
            </div>
            </div>
            <div class="form-group row form1">
            <label class="col-sm-3 col-form-label">Bank Name:</label>
            <div class="col-sm-9">
                <input name="bankname" class="form-control " type="text" value="<%= currentUser.bankname %>" readonly>
            </div>
            </div>
            <div class="form-group row form1">
            <label class="col-sm-3 col-form-label">Account:</label>
            <div class="col-sm-9">
                <input name="bankacc" class="form-control " type="text" value="<%= currentUser.bankacc %>" readonly>
            </div>
            </div>
            <div class="form-group row form1">
            <label class="col-sm-3 col-form-label">Branch:</label>
            <div class="col-sm-9">
                <input name="bankbranch" class="form-control " type="text" value="<%= currentUser.bankbranch %>" readonly>
            </div>
            </div>
            <div class="form-group row form1">
            <label class="col-sm-3 col-form-label">IFSC:</label>
            <div class="col-sm-9">
                <input name="bankifsc" class="form-control " type="text" value="<%= currentUser.bankifsc %>" readonly>
            </div>
            </div>
            <div class="form-group row form1">
            <label class="col-sm-3 col-form-label">Beneficiary:</label>
            <div class="col-sm-9">
                <input name="bankbene" class="form-control " type="text" value="<%= currentUser.bankbene %>" readonly>
            </div>
            </div>
            </form>
    <% } %>
    <% } else { %>
        <div class="col-sm-9">
        <p class="lead">Not Allowed</p>
    </div>
        <% }  %>
    
    



<%- include("../partials/footer") %>
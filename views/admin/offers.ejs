<%- include("../partials/header") %>
<%- include("../partials/adminnav") %>
  
<div class="col-sm-11">

    <% for(var i=0;i<offurl.length;i++){ %>
        <div class="backgroundoffer form-group row">
            <label class="col-sm-3 col-form-label"><strong>OFFER #  <%= i+1 %></strong></label>
            <form action="/admin/offers/<%=offurl[i]._id%>/?_method=DELETE" method="POST">
            <div class="col-sm-9">
                <div class="input-group input2">                
                <input class="form-control formoffers" type="text" value="<%= offurl[i].offerurl %>" readonly>
                <div class="input-group-append">
                    <button class="btn btn-danger">Delete</button>
                  </div>
                </div>
            </div>
            </form>
        </div>
    <% } %>
    <hr>
    <form action="/admin/offers" method="POST">
        <fieldset>
        
        <!-- Form Name -->
        <h4>Add Offers </h4>
        
        <!-- Text input-->
        <div id="itemsfor" class="form-group">
          
            <div class="margin-bottom">
            <input id="textinput" name="offerurl" type="text" placeholder="Enter URL of Offer" class="form-control input-md">
            
            </div>
        </div>
        
        <button class="btn btn-info">Submit</button>
        <hr></hr>
        </fieldset>
        </form>

          <button id="add" class="btn btn-primary" type="button">+ Add Input Field</button> 
          <button class="btn btn-danger delete">- Remove Input Field</button>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script type="text/javascript" src="/js/addoffers.js"></script>  





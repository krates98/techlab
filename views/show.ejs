<%- include("partials/header") %>
<div class="container">
    <h5 style="text-align: center">Displaying Data</h5>
    <form>
                <div class="form-group row form1">
                <label class="col-sm-3 col-form-label">First Name:</label>
                <div class="col-sm-9">
                    <input class="form-control" type="text" value="<%= usadata.contactname %>" onclick="myFunction(0)"  readonly>
                </div>
                </div>
                <div class="form-group row form1">
                <label class="col-sm-3 col-form-label">Phone:</label>
                <div class="col-sm-9">
                    <input class="form-control phone" type="text" value="<%= usadata.phone.substring(0, 3) %>" onclick="myFunction(1)"  readonly>
                    <input class="form-control phone" type="text" value="<%= usadata.phone.substring(3, 6) %>" onclick="myFunction(2)"  readonly>
                    <input class="form-control phone" type="text" value="<%= usadata.phone.substring(6, 10) %>" onclick="myFunction(3)"  readonly>
                </div>
                </div>
                <div class="form-group row form1">
                <label class="col-sm-3 col-form-label">Pin Code:</label>
                <div class="col-sm-9">
                    <input class="form-control" type="text" value="<%= usadata.zip %>" onclick="myFunction(4)"  readonly>
                </div>
                </div>
                <div class="form-group row form1">
                <label class="col-sm-3 col-form-label">Address:</label>
                <div class="col-sm-9">
                    <input class="form-control" type="text" value="<%= usadata.address %>" onclick="myFunction(5)"  readonly>
                </div>
                </div>
                <div class="form-group row form1">
                <label class="col-sm-3 col-form-label">City:</label>
                <div class="col-sm-9">
                    <input class="form-control" type="text" value="<%= usadata.state %>" onclick="myFunction(6)"  readonly>
                </div>
                </div>
               
                <hr>
                <div class="form-group row form1">
                <label class="col-sm-3 col-form-label">Email:</label>
                <div class="col-sm-9">
                    <input class="form-control" type="text" value="<%= emails.email %>" onclick="myFunction(7)"  readonly>
                </div>
                </div>
                <div class="form-group row form1">
                    <label class="col-sm-3 col-form-label">Password:</label>
                    <div class="col-sm-9">
                        <input class="form-control" type="text" value="<%= emails.password %>" onclick="myFunction(8)"  readonly>
                    </div>
                    </div>
                <hr>
                </form>
                <div class="row" id="fetchdata">
                <form action="/data/<%= usadata._id %>?_method=DELETE" method="POST">
                <button class="btn btn-primary btn-lg btn-block">Fetch New Data</button>    
                </form>
                </div>
                
            </div> 
        <script src="/js/copy.js"></script>
        </div> 
        
        <div class="datafooter">
            <p class="h6 text-center">Developed By Techlab</p>
            </div>
            </body>
        </html>